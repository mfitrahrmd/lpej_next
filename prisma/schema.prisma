// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  Admin
  Atasan
  Staf
}

enum StatusLaporanBulanan {
  MENUNGGU
  DITERIMA
  DITOLAK
}

model User {
  pegawaiId Int    @id @default(autoincrement())
  password  String
  role      Role

  pegawai Pegawai?
}

model Pegawai {
  id        Int    @id @default(autoincrement())
  nip       String @unique
  unitKerja String
  jabatan   String
  nama      String

  atasanId Int?

  user           User             @relation(fields: [id], references: [pegawaiId])
  atasan         Pegawai?         @relation("AtasanPegawai", fields: [atasanId], references: [id])
  pegawai        Pegawai[]        @relation("AtasanPegawai")
  laporan        Laporan[]
  laporanBulanan LaporanBulanan[]
}

model LaporanBulanan {
  id    Int      @id @default(autoincrement())
  bulan DateTime
  path  String?

  pegawaiId Int

  status StatusLaporanBulanan?

  laporan Laporan[]
  pegawai Pegawai   @relation(fields: [pegawaiId], references: [id])
}

model Laporan {
  id              Int      @id @default(autoincrement())
  tanggal         DateTime
  kegiatan        String
  rincianKegiatan String?
  lokasi          String

  pegawaiId        Int
  laporanBulananId Int?

  foto           LaporanFoto[]
  pegawai        Pegawai         @relation(fields: [pegawaiId], references: [id])
  laporanBulanan LaporanBulanan? @relation(fields: [laporanBulananId], references: [id])
}

model LaporanFoto {
  id   Int    @id @default(autoincrement())
  path String

  laporanId Int

  laporan Laporan @relation(fields: [laporanId], references: [id])
}
